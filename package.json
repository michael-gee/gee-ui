{
	"name": "gee-ui",
	"version": "0.1.0",
	"description": "React shadcn component library wrapper.",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup -d --watch",
		"lint": "eslint . --ext .ts,.tsx",
		"format": "prettier --write .",
		"prepare": "husky install",
		"precommit": "lint-staged",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"peerDependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"devDependencies": {
		"@types/react": "^18.3.2",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"prettier": "3.2.4",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tailwindcss": "^3.4.3",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3"
	},
	"files": [
		"dist"
	],
	"lint-staged": {
		"*.{js,ts,tsx,css,md}": "prettier --write --ignore-unknown",
		"*.{js,ts,tsx}": "eslint --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/michael-gee/gee-ui.git"
	},
	"bugs": "https://github.com/michael-gee/gee-ui/issues",
	"author": "Michael Gee",
	"license": "MIT"
}
